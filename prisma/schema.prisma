datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  first_name   String
  last_name    String
  password     String
  refreshToken String?   @unique
  project      Project[]
  role         UserRole
}

model Project {
  id               String   @id @default(cuid())
  name             String
  creator          User     @relation(fields: [creatorId], references: [id])
  creatorId        String
  authorized_users String[]
  columns          Column[]
  columnOrder      String[]
}

model Column {
  id        String  @id @default(cuid())
  project   Project @relation(fields: [projectId], references: [id])
  projectId String
  title     String?
  tasks     Task[]
}

model Task {
  id        String     @id @default(cuid())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  title     String
  status    TaskStatus
  content   String
  column    Column     @relation(fields: [columnId], references: [id])
  columnId  String
}

enum UserRole {
  USER
  ADMIN
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  REVIEW
  DONE
}
