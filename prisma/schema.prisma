// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  name     String
  password String
}

model Task {
  id         Int     @id @default(autoincrement())
  title      String
}

model Project {
  id          Int    @id @default(autoincrement())
  description String
}
