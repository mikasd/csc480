datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  name     String
  password String
}

model Project {
  id   String       @id @default(cuid())
  name String
  data ProjectData?
}

model ProjectData {
  id          String   @id @default(cuid())
  project     Project  @relation(fields: [projectId], references: [id])
  projectId   String
  tasks       Task[]
  columns     Column[]
  columnOrder String[]
}

model Task {
  id            String      @id @default(cuid())
  projectData   ProjectData @relation(fields: [projectDataId], references: [id])
  projectDataId String
  title         String?
  content       String?
}

model Column {
  id            String      @id @default(cuid())
  projectData   ProjectData @relation(fields: [projectDataId], references: [id])
  projectDataId String
  title         String?
  taskIds       String[]
}
